 @import "bootstrap-sprockets";
 @import "bootstrap";
 @import "font-awesome";

 /* Over all CSS */

 body {
  background-color: #A517BA;
 }

 /* Home Page CSS */

.zen {
    position: fixed;
    left: -0.001em;
    top: 10;
    width: 0.5em;
    font-size: 48px;
    line-height: .8;
    text-align: center;
    text-transform: uppercase;
    word-wrap: break-word;
    text-shadow: 0 0 48px rgba(0,0,0,0.3);
    font-family: 'Indie Flower', cursive;
    color: red;
}

.jumbotron {
  text-align: center;
  margin-bottom: 0px;
  height: 750px;
  width: auto;
  margin-top: -20px;
  background-image: image-url("wine-food.jpeg");
  background-size: 100% 100%;
}

.jum_image{
  background-repeat: no-repeat;
  height: 700px;
}

.banner {
  background-position: top left, center center;
  background-repeat: repeat, no-repeat;
  background-size: auto, cover;
  color: #fff;
  padding: 12em 0;
  position: relative;
  text-align: center
}

.inner {
  display: inline-block;
  background: rgba(29,39,38,0.7);
  position: relative;
  z-index: 2;
  padding: 25px 25px 25px 25px;
  text-align: center;
}

.row-1 {
  margin-top: 100px;
  margin-bottom: 100px;
}

 /* Blog Post Index page CSS */
 
 .head {
  text-align: center; 
 }

 .index_top_div {
  text-align: center;
  text-transform: uppercase;
  border: 5px solid black;
  border-radius: 50px;
  width: 600px;
  margin-top: 50px;
  margin-bottom: 10px;
  background: white;
  color: rgb(41,41,163);
  font-family: 'Indie Flower', cursive;
  box-shadow: -18px -18px 8px rgba(0,0,0,0.2);
 }

 .index_top {
  background-color: rgba(142,134,143,1.0);
  margin-top: 25px;
  margin-bottom: 50px;
  box-shadow: -10px -10px 8px rgba(0,0,0,0.5);
  border-radius: 30px;
}

.index_h1 {
  text-align: center;
  font-family: 'Indie Flower', cursive;
}

.index_post {
  margin-top: 30px;
}

.body_sytle {
  text-align: center; 
}

.body_learn {
  text-transform: uppercase;
  font-family: 'Permanent Marker', cursive;
}

.index_title {
  color: green;
}

.pagination {
  text-align: center;
}


/* Your Post Page CSS */

.your_top {
  background-color: rgba(142,134,143,1.0);
  border-radius: 15px;
  box-shadow: -10px -10px 8px rgba(0,0,0,0.5);
  margin-bottom: 50px;
}

.blog_top {
  text-align: center;
  text-transform: uppercase;
}

.background_your {
  box-shadow: 12px 12px 8px rgba(0,0,0,0.5);
  border-radius: 5px;
}

.your_title {
  text-align: center;
  font-size: 25px;
}

.your_image {
  text-align: center;
}

.author {
  font-size: 30px;
}

/* Show CSS Page */

.show_comments {
  border-radius: 15px;
  box-shadow: 15px 15px 8px rgba(0,0,0,0.5);
}


/* New Blog post page */

 .background {
  background-color: rgba(225,50,100,0.7);
  box-shadow: 15px 15px 8px rgba(0,0,0,0.5);
  border-radius: 25px;
 }

 .button_new {
  margin-bottom: 15px;
 }

/* Form page */

.hide {
  display: none; 
}

/* log in page CSS */
.main {
  background-color: rgba(225,50,100,0.7);
  padding-bottom: 20px;
  border-radius: 20px;
  box-shadow: 10px 10px 8px rgba(0,0,0,0.5)
}

.heading_center {
  text-align: center;
  text-transform: uppercase;
}

/* Edit user Page */

.edit_h1 {
  text-align: center;
  text-transform: uppercase;
}

/* _links.html.erb CSS */

.form_space {
  margin-top: 10px;
}

/* Navbar CSS */

.navbar-default {
  background-color: #6f778d;
  border-color: #583d3b;
}
.navbar-default .navbar-brand {
  color: #ecf0f1;
}
.navbar-default .navbar-brand:hover,
.navbar-default .navbar-brand:focus {
  color: #e83bc5;
}
.navbar-default .navbar-text {
  color: #ecf0f1;
}
.navbar-default .navbar-nav > li > a {
  color: #ecf0f1;
}
.navbar-default .navbar-nav > li > a:hover,
.navbar-default .navbar-nav > li > a:focus {
  color: #e83bc5;
}
.navbar-default .navbar-nav > .active > a,
.navbar-default .navbar-nav > .active > a:hover,
.navbar-default .navbar-nav > .active > a:focus {
  color: #e83bc5;
  background-color: #583d3b;
}
.navbar-default .navbar-nav > .open > a,
.navbar-default .navbar-nav > .open > a:hover,
.navbar-default .navbar-nav > .open > a:focus {
  color: #e83bc5;
  background-color: #583d3b;
}
.navbar-default .navbar-toggle {
  border-color: #583d3b;
}
.navbar-default .navbar-toggle:hover,
.navbar-default .navbar-toggle:focus {
  background-color: #583d3b;
}
.navbar-default .navbar-toggle .icon-bar {
  background-color: #ecf0f1;
}
.navbar-default .navbar-collapse,
.navbar-default .navbar-form {
  border-color: #ecf0f1;
}
.navbar-default .navbar-link {
  color: #ecf0f1;
}
.navbar-default .navbar-link:hover {
  color: #e83bc5;
}

@media (max-width: 767px) {
  .navbar-default .navbar-nav .open .dropdown-menu > li > a {
    color: #ecf0f1;
  }
  .navbar-default .navbar-nav .open .dropdown-menu > li > a:hover,
  .navbar-default .navbar-nav .open .dropdown-menu > li > a:focus {
    color: #e83bc5;
  }
  .navbar-default .navbar-nav .open .dropdown-menu > .active > a,
  .navbar-default .navbar-nav .open .dropdown-menu > .active > a:hover,
  .navbar-default .navbar-nav .open .dropdown-menu > .active > a:focus {
    color: #e83bc5;
    background-color: #583d3b;
  }
}

