<p id="notice"><%= notice %></p>

<div class="container">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <%= @blog_post.title %>
    </div>
    <div class="panel-body">
      By <strong><%= @blog_post.user.username %></strong>
      <p><%= image_tag @blog_post.avatar.url(:medium) %></p>
      </p><%= @blog_post.blog_entry %></p>
    </div>
  </div>

  <div class="panel panel-success">
    <div class="panel-heading">
      Make a Comment
    </div>
    <div class="panel-body">
      <%= render 'comments/form' %>
    </div>
  </div>

  <div class="panel panel-primary">
    <div class="panel-header">
      <h4>Comments</h4>
        <% @blog_post.comments.each do |comment| %>
          <div class="panel-body">
            <p><strong><%= comment.user.username %></strong> said: </p>
            <p><%= comment.comment_entry %></p>
          </div>
        <% end %>
    </div>
  </div>


  <div> 
    <%= link_to 'Edit', edit_blog_post_path(@blog_post) %> 
    <%= link_to 'Back', blog_posts_path %>
  </div>


