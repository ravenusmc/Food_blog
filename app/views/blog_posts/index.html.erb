<p id="notice"><%= notice %></p>

<h1>Current Blog Posts</h1>

<div class="container">
  <div class="row">
    <% @blog_posts.each do |blog_post| %>
    <div class="col-md-6">
      <div class="panel panel-primary">
        <div class="panel-heading head">
          <%= link_to blog_post.title, blog_post %>
        </div>
        <div class="panel-body">
          by <%= blog_post.user.email %><br />
          <%= image_tag blog_post.avatar.url(:medium) %>
          <p><%= blog_post.blog_entry[0..250] %>..[<%= link_to "READ MORE", blog_post %>]</p>
        </div>
        <div class="panel-footer">
          <%= link_to 'Edit', edit_blog_post_path(blog_post), class: "btn btn-info" %>
          <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>

<br>

<%= link_to 'New Blog post', new_blog_post_path %>

